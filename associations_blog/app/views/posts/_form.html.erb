<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>

  <%= f.label :body %>
  <%= f.text_area :body %>
  <br>

  <%= f.label :category_id %>
  <%= f.collection_select :category_id, Category.all, :id, :name %>
  <br>

  <%# f.label :category_id %>
  <%# f.collection_radio_buttons :category_id, Category.all, :id, :name %>
  <br>

  <%= f.label :tag_ids %>
  <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
  <br>

  <%= f.submit %>
<% end %>